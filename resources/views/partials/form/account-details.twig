<div class="form-row table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Fecha de Compra</th>
        <th scope="col">Saldo</th>
        <th scope="col">Abonado</th>
        <th scope="col">Adeudo</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for detail in my.account.details %}
      <tr data-account="{{ detail.id_cuenta }}">
        <td>{{ detail.fecha_compra }}</td>
        <td>{{ detail.saldo }}</td>
        <td>{{ detail.abonado }}</td>
        <td>{{ detail.restante }}</td>
        <td>
          <div class="btn-group">
            <button class="btn btn-outline-primary btn-sm">
              <i class="fa fa-info-circle"></i>
            </button>
            <button class="btn btn-outline-secondary btn-sm"
              data-toggle="modal" data-target="#payModal" title="Abonar">
              <i class="fa fa-credit-card"></i>
            </button>
          </div>
        </td>
      </tr>
      {% else %}
      <tr class="col-12 text-center">
        <td colspan="5">No debe ningún artículo</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
