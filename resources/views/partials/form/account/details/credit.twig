<div class="form-row table-responsive">
  <table class="table table-hover">
    <thead>
      <tr class="text-center">
        <th scope="col">Fecha</th>
        <th scope="col">Cantidad</th>
      </tr>
    </thead>
    <tbody>
      {% for it in account.details.credit %}
      <tr class="text-center">
        <td>{{ it.fecha|date('d/m/Y') }}</td>
        <td>{{ it.cantidad }}</td>
      </tr>
      {% else %}
      <tr class="col-12 text-center">
        <td colspan="2">No ha realizado abonos a esta cuenta</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>