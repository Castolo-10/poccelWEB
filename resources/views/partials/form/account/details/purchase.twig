<div class="form-row table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Precio</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
      {% for item in account.details.purchase %}
      <tr>
        <td>{{ item.nombre_producto }}</td>
        <td>{{ item.cantidad }}</td>
        <td>{{ item.precio }}</td>
        <td>{{ item.total }}</td>
      </tr>
      {% else %}
      <tr>
        <td colspan="4">No hay productos en esta cuenta</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
