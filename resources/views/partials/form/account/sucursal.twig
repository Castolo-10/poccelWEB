<form>
  <fieldset disabled="disabled">
  {% with { sucursal: account.details.sucursal } %}

  <div class="form-row">
    <div class="col-12">
      <label for="sc-name">Nombre</label>
      <input type="text" class="form-control" value="{{ sucursal.nombre }}">
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-8">
      <label for="address">Domicilio (calle y número)</label>
      <input type="text" class="form-control" value="{{ sucursal.calle|e }} #{{ sucursal.num_dom|e }}" id="address">
    </div>
    <div class="col-md-4">
      <label for="suburb">Colonia</label>
      <input type="text" class="form-control" id="suburb" value="{{ sucursal.colonia|e }}">
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-4">
      <label for="cp-code">Código postal</label>
      <input type="text" class="form-control" id="cp-code" value="{{ sucursal.cp|e }}">
    </div>
    <div class="col-md-4">
      <label for="state">Estado/Provincia</label>
      <input type="text" class="form-control" id="state" value="{{ (sucursal.estado? sucursal.estado : 'N/D')|e }}">
    </div>
    <div class="col-md-4">
      <label for="city">Ciudad/Municipio</label>
      <input type="text" class="form-control" id="city" value="{{ sucursal.ciudad|e }}">
    </div>
  </div>
  {% endwith %}
  </fieldset>
</form>
