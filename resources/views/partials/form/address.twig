<form>
  <fieldset disabled="disabled">

  <div class="form-row">
    <div class="col-md-8">
      <label for="address">Domicilio (calle y número)</label>
      <input type="text" class="form-control" id="address" value="{{ my.address.street | e }} #{{ my.address.number }} {{ my.address.int ? "(#{my.address.int})" : '' }}">
    </div>
    <div class="col-md-4">
      <label for="suburb">Colonia</label>
      <input type="text" class="form-control" id="num" value="{{ my.address.suburb | e }}">
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-4">
      <label for="cp-code">Código postal</label>
      <input type="text" class="form-control" id="cp-code" value="{{ my.address.postal_code | e }}">
    </div>
    <div class="col-md-4">
      <label for="f-lastname">Estado/Provincia</label>
      <input type="text" class="form-control" id="state" value="{{ (my.address.state? my.address.state : 'N/D') | e }}">
    </div>
    <div class="col-md-4">
      <label for="m-lastname">Ciudad/Municipio</label>
      <input type="text" class="form-control" id="city" value="{{ my.address.city | e }}">
    </div>
  </div>

  </fieldset>
</form>
