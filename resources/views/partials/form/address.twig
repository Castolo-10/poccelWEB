{% set user = app.request.user %}
<form>
  <fieldset disabled="disabled">

  <div class="form-row">
    <div class="col-md-8">
      <label for="address">Domicilio (calle y número)</label>
      <input type="text" class="form-control" id="address" value="{{ user.address.street | e }} #{{ user.address.number }} {{ user.address.int ? "(#{user.address.int})" : '' }}">
    </div>
    <div class="col-md-4">
      <label for="suburb">Colonia</label>
      <input type="text" class="form-control" id="suburb" value="{{ user.address.suburb | e }}">
    </div>
  </div>

  <div class="form-row">
    <div class="col-md-4">
      <label for="cp-code">Código postal</label>
      <input type="text" class="form-control" id="cp-code" value="{{ user.address.postal_code | e }}">
    </div>
    <div class="col-md-4">
      <label for="state">Estado/Provincia</label>
      <input type="text" class="form-control" id="state" value="{{ (user.address.state? user.address.state : 'N/D') | e }}">
    </div>
    <div class="col-md-4">
      <label for="city">Ciudad/Municipio</label>
      <input type="text" class="form-control" id="city" value="{{ user.address.city | e }}">
    </div>
  </div>

  </fieldset>
</form>
