{% set _paging = {
  'base_url': '/catalog?page=',
  'current': 3,
  'lim': {
  'min': 1,
  'max': 7
  }
} %}

<ul class="pagination justify-content-center mb-3">
  <li class="page-item">
    <a class="page-link"
      href="{{ _paging.base_url ~ (_paging.current-1 < 1 ? 1 : _paging.current-1) }}"
      ><i class="fas fa-angle-left"></i>
    </a>
  </li>
  {% for i in _paging.lim.min.._paging.lim.max %}
    <li class="page-item {{ i == _paging.current? 'active' : '' }}">
      <a class="page-link" href="{{ _paging.base_url ~ i }}">{{ i }}</a>
    </li>
  {% endfor %}
  <li class="page-item">
    <a class="page-link"
      href="{{ _paging.base_url ~ (_paging.current+1 > _paging.lim.max ? _paging.lim.max : _paging.current+1) }}"
      ><i class="fas fa-angle-right"></i>
    </a>
  </li>
</ul>
